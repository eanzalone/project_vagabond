<div class="form">
<h1>Login</h1>

<%= form_tag sessions_path do%>
	<div>
		Email:<br>
		<%= text_field :email, placeholder: "Email", :class => 'form-control' %>
	</div>
	<br>
	<div>
		Password:<br>
		<%= password_field :password, placeholder: "Password", :class => 'form-control' %>
	</div>
	<br>
	<div>
		<%= submit_tag "Login" %>
	</div>
<% end %>
</div>