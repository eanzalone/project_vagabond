<h3>Comments</h3>

<%= form_for [@post, @comment] do |f| %>

  <% if @comment.errors.any? %>
  <div class='comment-form'>
    <div id="error_explanation">
      <h2 class="error-warning">
        <%= pluralize(@comment.errors.count, "error") %> prohibited
        this comment from being saved:
      </h2>
      <ul>
        <% @comment.errors.full_messages.each do |msg| %>
          <li class="error-message"><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <p class="comment-form-title">
    <%= f.label :'New Comment' %>
    <%= f.text_field :feedback, class: 'form-control' %>
  </p>

  <p class="comment-form-submit">
    <%= f.submit "Post Comment", :class => 'btn btn-sm btn-primary pull-right' %>
  </p>
</div>
<% end %>
