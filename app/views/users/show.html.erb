<div class="container">
	<div class="row">
		<div id="profile-info" class="col-sm-3">
			<h3><%= @user[:first_name] %><%= @user[:last_name] %></h3>
			<img src="http://placehold.it/200x200" alt="profile photo">
			<%=link_to "Edit profile", edit_user_path, class:"btn btn-primary" %> 	
			<p></p> <!-- padding -->
			<p><strong>Home Base: </strong><%= @user.location %></p>
			<p><strong>Favorite Topic: </strong><small>(generated from which subject tag is in most of their posts)</small></p>
			<div class="row">
				<div class="col-sm-4 stats">
					<p>Following (#)</p>
				</div>
				<div class="col-sm-4 stats">
					<p>Followers (#)</p>
				</div>
				<div class="col-sm-4 stats">
					<p>Posts</br>(#)</p>
				</div>
			</div>
			<p></p> <!-- padding -->
			<p>Bio</p>
      <p><strong>Join Date: </strong><small><%= time_ago_in_words(@user.created_at)%> ago</small></p>
		</div>
		<div id="profile-data" class="col-sm-offset-1 col-sm-6">
			<h3>Posts</h3>
				<% @user.posts.each do |post| %>
					<li> <%= link_to post.title, post_path(post) %></li>
				<% end %>
		</div>
		<div id="map-space" class="col-sm-offset-1 col-sm-6">
			<h3>Map</h3>
			<p><small>(Idea: with pins that correspond with the locations of their posts)</small></p>
		</div>
	</div>
</div>
<style>
	#profile-info {
		text-align: center;
	    outline: navy solid;
	    padding-bottom: 150px;
	}
	#profile-data {
	    outline: navy solid;
	    padding-bottom: 300px;
	}
	#map-space {
	    outline: navy solid;
	    padding-bottom: 150px;
	}
	.stats{
		outline: navy solid thin;
	}
</style>