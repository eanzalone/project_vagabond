<div class='container'>
	<div class="row">
		<div class="col-md-2"></div>

		<div class='col-md-6'>

			<%= link_to 'All posts', posts_path %>

			<br>

			<h3><%= @post.title %></h3>
			<h4> By:
				<a href="<%= user_path(@post.user) %>">
					<%= @post.user.first_name %> <%= @post.user.last_name %>
				</a>
			</h4>
			<p><%= time_ago_in_words(@post.created_at)%> ago<p>


				<hr>
				<p><%= @post.body %></p>
				<hr>
				<% if current_user.id == @post.user.id %>
				<div class="row">
					<div class="col-md-6">
						<%= button_to 'Edit article', edit_post_path(@post),
						{ method: :get, class: 'btn btn-primary' } %>
					</div>
					<div class="col-md-6">
						<%= button_to 'Delete article', post_path(@post),
						{ method: :delete, data: { confirm: 'Are you sure?' },
						class: 'btn btn-danger' } %>
					</div>
					<% end %>
				</div>
			</div>
			<div class="col-md-2">
				<%= render partial: 'comments/new' %>
				<h2>Comments</h2>
				<ul>
					<% if @post.comments %>
					<% @post.comments.each do |comment| %>
					<li><%= comment.feedback %></li>
					<% end %>
					<% else %>
					<p>No post exist.</p>
					<% end %>
				</ul>
			</div>	
		</div>
	</div>
</div>




















